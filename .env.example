# Server Configuration
NODE_ENV=development
PORT=3000

# OAuth Configuration
VITE_OAUTH_PORTAL_URL=https://auth.example.com
VITE_APP_ID=your-app-id

# Database
# Required for Drizzle ORM
DATABASE_URL=mysql://user:password@localhost:3306/rapid_apollo_manus

# Frontend Configuration
# URL of the deployed application
VITE_APP_URL=http://localhost:3000
# Admin wallet address (lowercase) for dashboard access (frontend)
VITE_ADMIN_WALLET_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
# Analytics (Optional)
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=your-website-id

# Server Configuration - Admin & Demo
# Admin wallet address for server-side verification
ADMIN_WALLET_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
# Demo session ID for landing page demo (Optional, has fallback)
DEMO_SESSION_ID=test-apex-demo-LAIdJqey

# AI Services
# Perplexity API Key for Deep Research (Sonar Pro)
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxx

# Payment Gateways
# NowPayments (Crypto)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# Set to 'sandbox' for testing, 'live' for production
PAYPAL_MODE=sandbox

# Stripe (Optional/Future)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx

# LemonSqueezy (Optional/Future)
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret

# Security Secrets
# Critical for protecting cron jobs and internal endpoints
# MUST be set in production!
CRON_SECRET=generate_a_strong_random_string_here
# Session secret for secure cookies (if applicable)
SESSION_SECRET=generate_another_strong_random_string_here

# Coinbase Commerce (Legacy/Optional)
COINBASE_COMMERCE_API_KEY=your_coinbase_api_key
COINBASE_COMMERCE_WEBHOOK_SECRET=your_coinbase_webhook_secret
